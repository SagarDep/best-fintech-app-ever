<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/achivka_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сделай 5 покупок за неделю, и получи +0.1% к накоплениям"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/material_text_subhead" />

    <TextView
        android:id="@+id/achivka_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/achivka_text"
        android:text="3/5"
        android:textColor="#666" />

    <ProgressBar
        android:id="@+id/achivka_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/achivka_text"
        android:layout_marginEnd="64dp"
        android:layout_toStartOf="@id/achivka_status"
        android:max="5"
        android:progress="3"
        android:secondaryProgress="5" />

</RelativeLayout>